# Wob theme generated by Tinct
# https://github.com/jmylchreest/tinct

# Root (default) style colors
# Using semi-transparent background (CC alpha ~= 80% opacity)
background_color = {{ get . "background" }}CC
border_color = {{ get . "foreground" }}FF
bar_color = {{ get . "accent1" }}FF

# Overflow (value > max) colors
overflow_background_color = {{ get . "background" }}CC
overflow_border_color = {{ get . "danger" }}FF
overflow_bar_color = {{ get . "danger" }}FF

[style.low]
background_color = {{ get . "background" }}CC
border_color = {{ get . "success" }}FF
bar_color = {{ get . "success" }}FF
overflow_background_color = {{ get . "background" }}CC
overflow_border_color = {{ get . "warning" }}FF
overflow_bar_color = {{ get . "warning" }}FF

[style.normal]
background_color = {{ get . "background" }}CC
border_color = {{ get . "accent1" }}FF
bar_color = {{ get . "accent1" }}FF
overflow_background_color = {{ get . "background" }}CC
overflow_border_color = {{ get . "warning" }}FF
overflow_bar_color = {{ get . "warning" }}FF

[style.critical]
background_color = {{ get . "background" }}CC
border_color = {{ get . "danger" }}FF
bar_color = {{ get . "danger" }}FF
overflow_background_color = {{ get . "background" }}CC
overflow_border_color = {{ get . "danger" }}FF
overflow_bar_color = {{ get . "danger" }}FF
