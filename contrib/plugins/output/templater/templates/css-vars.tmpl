/* Generated by Tinct - {{ themeType . }} theme */
{{- if .WallpaperPath }}
/* Wallpaper: {{ .WallpaperPath }} */
{{- end }}

:root {
  /* Base colors */
  --color-background: {{ (get . "background").Hex }};
  --color-foreground: {{ (get . "foreground").Hex }};

  /* Muted variants */
  {{- if has . "backgroundMuted" }}
  --color-background-muted: {{ (get . "backgroundMuted").Hex }};
  {{- end }}
  {{- if has . "foregroundMuted" }}
  --color-foreground-muted: {{ (get . "foregroundMuted").Hex }};
  {{- end }}

  /* Accent colors */
  {{- if has . "accent1" }}
  --color-accent-1: {{ (get . "accent1").Hex }};
  --color-accent-1-rgb: {{ (get . "accent1").R }}, {{ (get . "accent1").G }}, {{ (get . "accent1").B }};
  {{- end }}
  {{- if has . "accent2" }}
  --color-accent-2: {{ (get . "accent2").Hex }};
  --color-accent-2-rgb: {{ (get . "accent2").R }}, {{ (get . "accent2").G }}, {{ (get . "accent2").B }};
  {{- end }}
  {{- if has . "accent3" }}
  --color-accent-3: {{ (get . "accent3").Hex }};
  --color-accent-3-rgb: {{ (get . "accent3").R }}, {{ (get . "accent3").G }}, {{ (get . "accent3").B }};
  {{- end }}
  {{- if has . "accent4" }}
  --color-accent-4: {{ (get . "accent4").Hex }};
  --color-accent-4-rgb: {{ (get . "accent4").R }}, {{ (get . "accent4").G }}, {{ (get . "accent4").B }};
  {{- end }}

  /* Semantic colors */
  {{- if has . "danger" }}
  --color-danger: {{ (get . "danger").Hex }};
  {{- end }}
  {{- if has . "warning" }}
  --color-warning: {{ (get . "warning").Hex }};
  {{- end }}
  {{- if has . "success" }}
  --color-success: {{ (get . "success").Hex }};
  {{- end }}
  {{- if has . "info" }}
  --color-info: {{ (get . "info").Hex }};
  {{- end }}

  /* Surface colors */
  {{- if has . "surface" }}
  --color-surface: {{ (get . "surface").Hex }};
  {{- end }}
  {{- if has . "onSurface" }}
  --color-on-surface: {{ (get . "onSurface").Hex }};
  {{- end }}
}
