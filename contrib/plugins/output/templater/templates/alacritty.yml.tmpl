# Alacritty color scheme - Generated by Tinct
# Theme: {{ themeType . }}
# Include this in your alacritty.yml with:
#   import:
#     - ~/.config/alacritty/tinct-colors.yml

colors:
  primary:
    background: '{{ (get . "background").Hex }}'
    foreground: '{{ (get . "foreground").Hex }}'

  cursor:
    text: '{{ (get . "background").Hex }}'
    cursor: '{{ (get . "accent1").Hex }}'

  selection:
    text: CellForeground
    background: '{{ (get . "accent1").Hex }}'

  normal:
    black:   '{{ (ansi . 0).Hex }}'
    red:     '{{ (ansi . 1).Hex }}'
    green:   '{{ (ansi . 2).Hex }}'
    yellow:  '{{ (ansi . 3).Hex }}'
    blue:    '{{ (ansi . 4).Hex }}'
    magenta: '{{ (ansi . 5).Hex }}'
    cyan:    '{{ (ansi . 6).Hex }}'
    white:   '{{ (ansi . 7).Hex }}'

  bright:
    black:   '{{ (ansi . 8).Hex }}'
    red:     '{{ (ansi . 9).Hex }}'
    green:   '{{ (ansi . 10).Hex }}'
    yellow:  '{{ (ansi . 11).Hex }}'
    blue:    '{{ (ansi . 12).Hex }}'
    magenta: '{{ (ansi . 13).Hex }}'
    cyan:    '{{ (ansi . 14).Hex }}'
    white:   '{{ (ansi . 15).Hex }}'
