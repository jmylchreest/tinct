# Detected theme: {{ .SourceTheme }}

# ============================================================================
# Urgency: Low
# Used for informational notifications
# ============================================================================

[urgency_low]
    # Background color
    background = "{{ .Background }}"

    # Text color
    foreground = "{{ .ForegroundMuted }}"

    # Frame/border color
    frame_color = "{{ .InfoWithAlpha "cc" }}"

    # Highlight color (for progress bars)
    highlight = "{{ .Info }}"

    # Timeout in seconds (0 = default from global config)
    timeout = 10

# ============================================================================
# Urgency: Normal
# Used for standard notifications
# ============================================================================

[urgency_normal]
    # Background color
    background = "{{ .Background }}"

    # Text color
    foreground = "{{ .Foreground }}"

    # Frame/border color
    frame_color = "{{ .Accent1 }}"

    # Highlight color (for progress bars)
    highlight = "{{ .Accent1 }}"

    # Timeout in seconds (0 = default from global config)
    timeout = 10

# ============================================================================
# Urgency: Critical
# Used for important/error notifications
# ============================================================================

[urgency_critical]
    # Background color
    background = "{{ .DangerWithAlpha "ee" }}"

    # Text color (inverted for visibility)
    foreground = "{{ .Background }}"

    # Frame/border color
    frame_color = "{{ .Danger }}"

    # Highlight color (for progress bars)
    highlight = "{{ .Warning }}"

    # Timeout in seconds (0 = never timeout)
    timeout = 0

