# Alacritty automatically reloads config when this file changes.

[colors.primary]
background = '{{ get . "background" | hex }}'
foreground = '{{ get . "foreground" | hex }}'
dim_foreground = '{{ get . "foregroundMuted" | hex }}'
bright_foreground = '{{ get . "foreground" | hex }}'

[colors.cursor]
text = '{{ get . "background" | hex }}'
cursor = '{{ get . "accent1" | hex }}'

[colors.vi_mode_cursor]
text = '{{ get . "background" | hex }}'
cursor = '{{ get . "accent2" | hex }}'

[colors.selection]
text = 'CellForeground'
background = '{{ get . "accent1" | hex }}'

[colors.search.matches]
foreground = '{{ get . "background" | hex }}'
background = '{{ get . "warning" | hex }}'

[colors.search.focused_match]
foreground = '{{ get . "background" | hex }}'
background = '{{ get . "accent1" | hex }}'

[colors.hints.start]
foreground = '{{ get . "background" | hex }}'
background = '{{ get . "warning" | hex }}'

[colors.hints.end]
foreground = '{{ get . "background" | hex }}'
background = '{{ get . "success" | hex }}'

[colors.line_indicator]
foreground = 'None'
background = 'None'

[colors.footer_bar]
foreground = '{{ get . "foreground" | hex }}'
background = '{{ get . "backgroundMuted" | hex }}'

