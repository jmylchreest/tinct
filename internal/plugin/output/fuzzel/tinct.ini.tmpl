# Fuzzel colour theme generated by Tinct
# https://github.com/jmylchreest/tinct
#
# Include this file in your fuzzel.ini with:
#   include={{ .OutputDir }}/{{ .ColorFileName }}
#
# Or use as standalone config: fuzzel --config {{ .OutputDir }}/{{ .ColorFileName }}
#
# Detected theme: {{ themeType . }}

[colors]
# Background color (with 85% opacity)
background={{ withAlpha (get . "background") 0.85 | hexAlpha | trimPrefix "#" }}

# Text (foreground) color of unselected entries
text={{ get . "foreground" | hexAlpha | trimPrefix "#" }}

# Prompt character(s) color
prompt={{ get . "accent1" | hexAlpha | trimPrefix "#" }}

# Placeholder text color
placeholder={{ withAlpha (get . "foregroundMuted") 0.80 | hexAlpha | trimPrefix "#" }}

# Input text color
input={{ get . "foreground" | hexAlpha | trimPrefix "#" }}

# Matched substring color
match={{ get . "accent2" | hexAlpha | trimPrefix "#" }}

# Selected entry background
selection={{ get . "accent1" | hexAlpha | trimPrefix "#" }}

# Selected entry text
selection-text={{ get . "onAccent1" | hexAlpha | trimPrefix "#" }}

# Selected entry matched substring
selection-match={{ get . "accent2" | hexAlpha | trimPrefix "#" }}

# Match counter color
counter={{ get . "info" | hexAlpha | trimPrefix "#" }}

# Border color
border={{ get . "accent1" | hexAlpha | trimPrefix "#" }}

