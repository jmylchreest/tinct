# https://github.com/jmylchreest/tinct
#
# Include this file in your kitty.conf with:
#   include ~/.config/kitty/tinct.conf
#
# Detected theme: {{ themeType . }}

# ============================================================================
# Basic Colours
# ============================================================================

# background (colour0)
foreground {{ (get . "foreground") | hex }}
background {{ (get . "background") | hex }}

# Selection colours
selection_foreground {{ (get . "background") | hex }}
selection_background {{ (get . "accent1") | hex }}

# ============================================================================
# Cursor Colours
# ============================================================================

# accent1 (colour4)
cursor {{ (get . "accent1") | hex }}
cursor_text_color {{ (get . "background") | hex }}

# ============================================================================
# URL Colours
# ============================================================================

# info (colour15)
url_color {{ (get . "info") | hex }}

# ============================================================================
# Tab Bar Colours
# ============================================================================

# background (colour0)
tab_bar_background {{ (get . "background") | hex }}

# Active tab - accent1 (colour4)
active_tab_foreground {{ (get . "background") | hex }}
active_tab_background {{ (get . "accent1") | hex }}

# Inactive tab - accent1Muted (colour5)
inactive_tab_foreground {{ (get . "foreground") | hex }}
inactive_tab_background {{ (get . "accent1Muted") | hex }}

# ============================================================================
# Border Colours
# ============================================================================

# accent1 (colour4)
active_border_color {{ (get . "accent1") | hex }}

# border - NEW: uses generated border color
inactive_border_color {{ if has . "border" }}{{ (get . "border") | hex }}{{ else }}{{ (get . "accent2Muted") | hex }}{{ end }}

# warning (colour13)
bell_border_color {{ (get . "warning") | hex }}

# ============================================================================
# Mark Colours
# ============================================================================

# accent1 (colour4)
mark1_foreground {{ (get . "background") | hex }}
mark1_background {{ (get . "accent1") | hex }}

# ============================================================================
# ANSI Colour Palette
# ============================================================================
# All colours are exposed with their semantic names for reference

{{- $bg := get . "background" }}
{{- $fg := get . "foreground" }}
{{- $bgMuted := get . "backgroundMuted" }}
{{- $fgMuted := get . "foregroundMuted" }}
{{- $accent1 := get . "accent1" }}
{{- $accent1Muted := get . "accent1Muted" }}
{{- $accent2 := get . "accent2" }}
{{- $accent2Muted := get . "accent2Muted" }}
{{- $accent3 := get . "accent3" }}
{{- $accent3Muted := get . "accent3Muted" }}
{{- $accent4 := get . "accent4" }}
{{- $accent4Muted := get . "accent4Muted" }}
{{- $danger := get . "danger" }}
{{- $warning := get . "warning" }}
{{- $success := get . "success" }}
{{- $info := get . "info" }}

color0  {{ $bg | hex }}         # background
color1  {{ $fg | hex }}         # foreground
color2  {{ $bgMuted | hex }}    # backgroundMuted
color3  {{ $fgMuted | hex }}    # foregroundMuted
color4  {{ $accent1 | hex }}    # accent1
color5  {{ $accent1Muted | hex }} # accent1Muted
color6  {{ $accent2 | hex }}    # accent2
color7  {{ $accent2Muted | hex }} # accent2Muted
color8  {{ $accent3 | hex }}    # accent3
color9  {{ $accent3Muted | hex }} # accent3Muted
color10 {{ $accent4 | hex }}    # accent4
color11 {{ $accent4Muted | hex }} # accent4Muted
color12 {{ $danger | hex }}     # danger
color13 {{ $warning | hex }}    # warning
color14 {{ $success | hex }}    # success
color15 {{ $info | hex }}       # info
