/* SwayOSD colour theme generated by Tinct
 * https://github.com/jmylchreest/tinct
 *
 * Place this file at ~/.config/swayosd/style.css
 * SwayOSD will automatically load it on startup
 *
 * Detected theme: {{ themeType . }}
 */

window#osd {
    /* Rounded window */
    border-radius: 999px;
    border: none;

    /* Background with transparency */
    background: {{ get . "background" | withAlpha 0.85 | rgba }};
}

window#osd #container {
    margin: 16px;
}

/* Text and icon colors */
window#osd image,
window#osd label {
    color: {{ get . "foreground" | rgba }};
}

/* Disabled states */
window#osd progressbar:disabled,
window#osd image:disabled {
    opacity: 0.5;
}

/* Progress bar container */
window#osd progressbar {
    min-height: 6px;
    border-radius: 999px;
    background: transparent;
    border: none;
}

/* Progress bar track (background) */
window#osd trough {
    min-height: inherit;
    border-radius: inherit;
    border: none;
    background: {{ get . "foregroundMuted" | withAlpha 0.3 | rgba }};
}

/* Progress bar fill */
window#osd progress {
    min-height: inherit;
    border-radius: inherit;
    border: none;
    background: {{ get . "accent1" | rgba }};
}

/* ============================================================================
 * Optional: Custom styles for different OSD types
 * ============================================================================
 * Uncomment and customize as needed
 */

/* Volume OSD
window#osd.volume progress {
    background: {{ get . "accent3" | rgba }};
}
*/

/* Brightness OSD
window#osd.brightness progress {
    background: {{ get . "warning" | rgba }};
}
*/

/* Caps Lock OSD
window#osd.caps-lock {
    background: {{ get . "warning" | withAlpha 0.85 | rgba }};
}
window#osd.caps-lock image,
window#osd.caps-lock label {
    color: {{ get . "background" | rgba }};
}
*/

