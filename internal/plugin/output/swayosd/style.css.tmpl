window#osd {
    /* Rounded window */
    border-radius: 999px;
    border: none;

    /* Background with transparency */
    background: {{ .BackgroundRGBA "0.85" }};
}

window#osd #container {
    margin: 16px;
}

/* Text and icon colors */
window#osd image,
window#osd label {
    color: {{ .ForegroundRGB }};
}

/* Disabled states */
window#osd progressbar:disabled,
window#osd image:disabled {
    opacity: 0.5;
}

/* Progress bar container */
window#osd progressbar {
    min-height: 6px;
    border-radius: 999px;
    background: transparent;
    border: none;
}

/* Progress bar track (background) */
window#osd trough {
    min-height: inherit;
    border-radius: inherit;
    border: none;
    background: {{ .ForegroundMutedRGBA "0.3" }};
}

/* Progress bar fill */
window#osd progress {
    min-height: inherit;
    border-radius: inherit;
    border: none;
    background: {{ .Accent1RGB }};
}

/* ============================================================================
 * Optional: Custom styles for different OSD types
 * ============================================================================
 * Uncomment and customize as needed
 */

