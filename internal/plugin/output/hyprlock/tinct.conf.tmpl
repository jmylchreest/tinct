# Detected theme: {{ themeType . }}

# ============================================================================
# Tinct Wallpaper Variable
# ============================================================================
{{- if .WallpaperPath }}

$tinct_wallpaper = {{ .WallpaperPath }}
{{- end }}

# ============================================================================
# Tinct Color Variables
# ============================================================================

$tinct_background = rgb({{ get . "background" | rgbDecimal }})
$tinct_background_muted = rgb({{ get . "backgroundMuted" | rgbDecimal }})
$tinct_foreground = rgb({{ get . "foreground" | rgbDecimal }})
$tinct_foreground_muted = rgb({{ get . "foregroundMuted" | rgbDecimal }})

$tinct_accent1 = rgb({{ get . "accent1" | rgbDecimal }})
$tinct_accent2 = rgb({{ get . "accent2" | rgbDecimal }})
$tinct_accent3 = rgb({{ get . "accent3" | rgbDecimal }})
$tinct_accent4 = rgb({{ get . "accent4" | rgbDecimal }})

$tinct_danger = rgb({{ get . "danger" | rgbDecimal }})
$tinct_warning = rgb({{ get . "warning" | rgbDecimal }})
$tinct_success = rgb({{ get . "success" | rgbDecimal }})
$tinct_info = rgb({{ get . "info" | rgbDecimal }})

# ============================================================================
# RGBA Variants (with alpha channel)
# ============================================================================

$tinct_background_rgba = rgba({{ withAlpha (get . "background") 0.93 | rgbDecimal }})
$tinct_background_muted_rgba = rgba({{ withAlpha (get . "backgroundMuted") 0.80 | rgbDecimal }})
$tinct_foreground_rgba = rgba({{ get . "foreground" | rgbDecimal }})
$tinct_foreground_muted_rgba = rgba({{ withAlpha (get . "foregroundMuted") 0.87 | rgbDecimal }})

$tinct_accent1_rgba = rgba({{ get . "accent1" | rgbDecimal }})
$tinct_accent2_rgba = rgba({{ get . "accent2" | rgbDecimal }})
$tinct_accent3_rgba = rgba({{ get . "accent3" | rgbDecimal }})
$tinct_accent4_rgba = rgba({{ get . "accent4" | rgbDecimal }})

$tinct_danger_rgba = rgba({{ get . "danger" | rgbDecimal }})
$tinct_warning_rgba = rgba({{ get . "warning" | rgbDecimal }})
$tinct_success_rgba = rgba({{ get . "success" | rgbDecimal }})
$tinct_info_rgba = rgba({{ get . "info" | rgbDecimal }})

