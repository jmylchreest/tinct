# Hyprland colour variables generated by Tinct
# https://github.com/jmylchreest/tinct
#
# This file defines colour variables that can be used in your Hyprland configuration.
# Source this file in your hyprland.conf with:
#   source = ~/.config/hypr/tinct-colours.conf
#
# Detected theme: {{ themeType . }}

# ============================================================================
# Theme Colours ({{ themeType . }} theme)
# ============================================================================

{{- range allRoles . }}
{{- $roleName := printf "%s" . }}
{{- $color := get $ $roleName }}
# {{ $roleName }}
${{ $roleName }}RGB = rgb({{ $color | hex | trimPrefix "#" }})
${{ $roleName }}RGBDec = {{ $color | rgbDecimal }}
{{- end }}

# ============================================================================
# Indexed Colours
# ============================================================================
# All extracted colours, sorted by luminance

{{- range $i, $color := allColors . }}
$colour{{ $i }}RGB = rgb({{ $color | hex | trimPrefix "#" }})
$colour{{ $i }}RGBDec = {{ $color | rgbDecimal }}
{{- end }}
