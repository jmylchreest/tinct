{{- $ph := .PaletteHelper }}
{{- $bg := get $ph "background" }}
{{- $fg := get $ph "foreground" }}
{{- $bgMuted := get $ph "backgroundMuted" }}
{{- $fgMuted := get $ph "foregroundMuted" }}
{{- $accent1 := get $ph "accent1" }}
{{- $accent2 := get $ph "accent2" }}
{{- $accent3 := get $ph "accent3" }}
{{- $accent4 := get $ph "accent4" }}
{{- $danger := get $ph "danger" }}
{{- $warning := get $ph "warning" }}
{{- $success := get $ph "success" }}
{{- $info := get $ph "info" }}

{{- /* Get surface colors with fallbacks */ -}}
{{- $surface1 := $bgMuted }}
{{- if has $ph "surfaceContainerLow" }}{{- $surface1 = get $ph "surfaceContainerLow" }}{{- end }}
{{- $surface2 := $bgMuted }}
{{- if has $ph "surfaceContainer" }}{{- $surface2 = get $ph "surfaceContainer" }}{{- end }}

{{- /* Get muted accent colors with fallbacks */ -}}
{{- $accent1Muted := $accent1 }}
{{- if has $ph "accent1Muted" }}{{- $accent1Muted = get $ph "accent1Muted" }}{{- end }}
{{- $accent2Muted := $accent2 }}
{{- if has $ph "accent2Muted" }}{{- $accent2Muted = get $ph "accent2Muted" }}{{- end }}
{{- $accent3Muted := $accent3 }}
{{- if has $ph "accent3Muted" }}{{- $accent3Muted = get $ph "accent3Muted" }}{{- end }}
{{- $accent4Muted := $accent4 }}
{{- if has $ph "accent4Muted" }}{{- $accent4Muted = get $ph "accent4Muted" }}{{- end }}

{{- /* Get border/outline colors with fallbacks */ -}}
{{- $border := $accent1 }}
{{- if has $ph "border" }}{{- $border = get $ph "border" }}{{- end }}
{{- $outline := $accent1 }}
{{- if has $ph "outline" }}{{- $outline = get $ph "outline" }}{{- end }}
{{- $borderMuted := $fgMuted }}
{{- if has $ph "borderMuted" }}{{- $borderMuted = get $ph "borderMuted" }}{{- end }}

// Zellij Theme generated by Tinct
// https://github.com/jmylchreest/tinct
//
// Detected theme: {{ themeType $ph }}
//
// Apply this theme in your Zellij config with:
//   theme "tinct"

themes {
    tinct {
        // ====================================================================
        // Text Elements
        // Used for regular text in panes and UI elements
        // ====================================================================

        text_unselected {
            base {{ $fg | rgbSpaces }}
            background {{ $bg | rgbSpaces }}
            emphasis_0 {{ $accent4 | rgbSpaces }}
            emphasis_1 {{ $info | rgbSpaces }}
            emphasis_2 {{ $success | rgbSpaces }}
            emphasis_3 {{ $accent3 | rgbSpaces }}
        }

        text_selected {
            base {{ $fg | rgbSpaces }}
            background {{ $surface1 | rgbSpaces }}
            emphasis_0 {{ $accent4 | rgbSpaces }}
            emphasis_1 {{ $info | rgbSpaces }}
            emphasis_2 {{ $success | rgbSpaces }}
            emphasis_3 {{ $accent3 | rgbSpaces }}
        }

        // ====================================================================
        // Ribbon (Tab Bar)
        // The tab bar at the top showing open tabs
        // ====================================================================

        ribbon_selected {
            base {{ $bg | rgbSpaces }}
            background {{ $accent1 | rgbSpaces }}
            emphasis_0 {{ $danger | rgbSpaces }}
            emphasis_1 {{ $accent2 | rgbSpaces }}
            emphasis_2 {{ $accent3 | rgbSpaces }}
            emphasis_3 {{ $accent4 | rgbSpaces }}
        }

        ribbon_unselected {
            base {{ $fg | rgbSpaces }}
            background {{ $bgMuted | rgbSpaces }}
            emphasis_0 {{ $danger | rgbSpaces }}
            emphasis_1 {{ $fg | rgbSpaces }}
            emphasis_2 {{ $accent2 | rgbSpaces }}
            emphasis_3 {{ $accent3 | rgbSpaces }}
        }

        // ====================================================================
        // Table (Command Palette, Search Results)
        // Used for tabular data in UI overlays
        // ====================================================================

        table_title {
            base {{ $accent1 | rgbSpaces }}
            background 0
            emphasis_0 {{ $accent4 | rgbSpaces }}
            emphasis_1 {{ $info | rgbSpaces }}
            emphasis_2 {{ $success | rgbSpaces }}
            emphasis_3 {{ $accent3 | rgbSpaces }}
        }

        table_cell_selected {
            base {{ $fg | rgbSpaces }}
            background {{ $surface1 | rgbSpaces }}
            emphasis_0 {{ $accent4 | rgbSpaces }}
            emphasis_1 {{ $info | rgbSpaces }}
            emphasis_2 {{ $success | rgbSpaces }}
            emphasis_3 {{ $accent3 | rgbSpaces }}
        }

        table_cell_unselected {
            base {{ $fg | rgbSpaces }}
            background {{ $bg | rgbSpaces }}
            emphasis_0 {{ $accent4 | rgbSpaces }}
            emphasis_1 {{ $info | rgbSpaces }}
            emphasis_2 {{ $success | rgbSpaces }}
            emphasis_3 {{ $accent3 | rgbSpaces }}
        }

        // ====================================================================
        // List (File Browser, Pane Selection)
        // Used for list-based UI elements
        // ====================================================================

        list_selected {
            base {{ $fg | rgbSpaces }}
            background {{ $surface1 | rgbSpaces }}
            emphasis_0 {{ $accent4 | rgbSpaces }}
            emphasis_1 {{ $info | rgbSpaces }}
            emphasis_2 {{ $success | rgbSpaces }}
            emphasis_3 {{ $accent3 | rgbSpaces }}
        }

        list_unselected {
            base {{ $fg | rgbSpaces }}
            background {{ $bg | rgbSpaces }}
            emphasis_0 {{ $accent4 | rgbSpaces }}
            emphasis_1 {{ $info | rgbSpaces }}
            emphasis_2 {{ $success | rgbSpaces }}
            emphasis_3 {{ $accent3 | rgbSpaces }}
        }

        // ====================================================================
        // Frame (Pane Borders)
        // The borders around active and inactive panes
        // ====================================================================

        frame_selected {
            base {{ $border | rgbSpaces }}
            background 0
            emphasis_0 {{ $accent1 | rgbSpaces }}
            emphasis_1 {{ $info | rgbSpaces }}
            emphasis_2 {{ $accent3 | rgbSpaces }}
            emphasis_3 0
        }

        frame_highlight {
            base {{ $outline | rgbSpaces }}
            background 0
            emphasis_0 {{ $accent2 | rgbSpaces }}
            emphasis_1 {{ $outline | rgbSpaces }}
            emphasis_2 {{ $accent1 | rgbSpaces }}
            emphasis_3 {{ $accent3 | rgbSpaces }}
        }

        // ====================================================================
        // Exit Codes
        // Visual feedback for command success/failure
        // ====================================================================

        exit_code_success {
            base {{ $success | rgbSpaces }}
            background 0
            emphasis_0 {{ $info | rgbSpaces }}
            emphasis_1 {{ $bg | rgbSpaces }}
            emphasis_2 {{ $accent3 | rgbSpaces }}
            emphasis_3 {{ $accent2 | rgbSpaces }}
        }

        exit_code_error {
            base {{ $danger | rgbSpaces }}
            background 0
            emphasis_0 {{ $danger | rgbSpaces }}
            emphasis_1 0
            emphasis_2 0
            emphasis_3 0
        }

        // ====================================================================
        // Multiplayer Colors
        // Colors assigned to different users in collaborative sessions
        // ====================================================================

        multiplayer_user_colors {
            player_1 {{ $accent1 | rgbSpaces }}
            player_2 {{ $accent2 | rgbSpaces }}
            player_3 {{ $accent3 | rgbSpaces }}
            player_4 {{ $accent4 | rgbSpaces }}
            player_5 {{ $accent1Muted | rgbSpaces }}
            player_6 {{ $accent2Muted | rgbSpaces }}
            player_7 {{ $accent3Muted | rgbSpaces }}
            player_8 {{ $accent4Muted | rgbSpaces }}
            player_9 {{ $success | rgbSpaces }}
            player_10 {{ $info | rgbSpaces }}
        }
    }
}
